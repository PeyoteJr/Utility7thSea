<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="utility7thsea.controller.CharacterController">
    <children>
        <HBox layoutX="196.0" layoutY="602.0" prefHeight="111.0" prefWidth="888.0" spacing="80.0">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="147.0"
                        prefWidth="300.0" text="INDIETRO"/>
                <Button fx:id="createButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#onCreateButtonClick" prefHeight="147.0" prefWidth="300.0" text="CREA PERSONAGGIO"/>
                <Button fx:id="presetButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#onPresetButtonClick" prefHeight="147.0" prefWidth="300.0" text="PRESET"/>
            </children>
        </HBox>
        <TableView fx:id="characterTable" layoutX="40.0" layoutY="101.0" prefHeight="488.0" prefWidth="1200.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nome"/>
                <TableColumn fx:id="nationColumn" prefWidth="75.0" text="Nazione"/>
                <TableColumn fx:id="fastReflexesColumn" prefWidth="75.0" text="Riflessi rapidi"/>
                <TableColumn fx:id="duelistColumn" prefWidth="75.0" text="Duellante"/>
                <TableColumn fx:id="operationColumn" prefWidth="75.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Text layoutX="496.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PERSONAGGI">
            <font>
                <Font size="48.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
